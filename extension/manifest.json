{
  "manifest_version": 3,
  "name": "What Would Jesus Say",
  "version": "1.0.0",
  "description": "Have you ever wondered 'What Jesus would say about my browsing history?'. Well, wait no longer. Just ask, and He will answer.",
  "permissions": [
    "activeTab",
    "scripting",
    "storage"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "background": {
    "service_worker": "background.js"
  }
}